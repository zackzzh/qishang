            }

            .service-zx-card-title {
                margin-top : 30px;
                color      : #0F0F0F;
                font-size  : 16px;
                font-weight: 400;
            }

            .service-zx-card-apply {
                padding  : 4px 0 30px 0;
                color    : #999999;
                font-size: 14px;
            }
        }
    }

