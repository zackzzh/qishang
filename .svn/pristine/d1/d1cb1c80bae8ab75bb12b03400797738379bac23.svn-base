.page-service {
  background: linear-gradient(-4deg, #939595, #e9ebeb, #ffffff);
  padding-bottom: 120px;
}
.page-service .index-t {
  color: #0C273C;
  width: 278px;
  padding-top: 92px;
  margin-bottom: 36px;
}
.page-service .index-t div:nth-child(1) {
  font-size: 32px;
}
.page-service .index-t div:nth-child(2) {
  font-size: 26px;
  position: relative;
  display: inline-block;
  margin-top: 10px;
}
.page-service .index-t div:nth-child(2)::after {
  position: absolute;
  top: -5px;
  right: 0;
  content: "";
  width: 100%;
  height: 0;
  border: 2px solid #0C273C;
}
.page-service .service-list .service-one {
  position: relative;
}
.page-service .service-list .service-one .service-left {
  padding: 0 !important;
  width: 50%;
}
.page-service .service-list .service-one .service-left .left-top {
  width: 100%;
  height: 120px;
  font-size: 84px;
  line-height: 120px;
}
.page-service .service-list .service-one .service-left .left-top .top-one {
  height: 100%;
  width: 120px;
  background: #FF5A5A;
  color: #000;
  font-weight: bold;
  text-align: center;
  line-height: 120px;
  font-style: italic;
}
.page-service .service-list .service-one .service-left .left-top .top-two {
  width: 100%;
  height: 100%;
  background: #283F58;
  color: #FF5A5A;
  text-align: center;
}
.page-service .service-list .service-one .service-left .left-bottom {
  color: #FF5A5A;
  padding: 40px 20px;
  box-sizing: border-box;
  background: #042239;
  font-size: 38px;
}
.page-service .service-list .service-one .service-img {
  width: 60%;
  padding: 0 !important;
}
.page-service .service-list .service-one .service-img img {
  width: 60%;
  position: relative;
}
.page-service .service-list .service-one .img3 {
  width: 63%;
}
.page-service .service-list .service-one .img3 img {
  width: 66%;
}
.page-service .service-list .service-one .img4 {
  height: 60%;
}
.page-service .service-list .service-one .img5 {
  height: 154%;
  position: absolute;
  top: -117%;
}
@media (min-width: 992px) {
  .service-left .left-top {
    font-size: 70px !important;
  }
  .service-left .left-bottom {
    font-size: 30px !important;
  }
}
@media (min-width: 768px) {
  .service-left .left-top {
    font-size: 46px !important;
  }
  .service-left .left-bottom {
    font-size: 25px !important;
  }
}
@media screen and (min-width: 320px) and (max-width: 768px) {
  .service-left .left-top {
    font-size: 18px !important;
    height: 80px !important;
    line-height: 80px !important;
  }
  .service-left .left-top .top-one {
    width: 80px !important;
    line-height: 80px !important;
  }
  .service-left .left-bottom {
    font-size: 16px !important;
  }
}
