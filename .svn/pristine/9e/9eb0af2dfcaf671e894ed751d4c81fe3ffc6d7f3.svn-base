.abroad-service {
    background: linear-gradient(-4deg, rgba(147, 149, 149, 1), rgba(233, 235, 235, 1), rgba(255, 255, 255, 1));

    .page-banner {
        position: relative;
        z-index : 1;

        img {
            width: 100%;
        }
    }

    .planning {
        position: relative;
        z-index : 2;
        top     : -100px;

        .planning-left {
            padding        : 0;
            display        : flex;
            justify-content: flex-end;

            .left-content {
                position          : relative;
                height            : 400px;
                background        : rgba(44, 44, 44, 1);
                color             : #C9CECD;
                padding           : 30px;
                width             : 70%;
                transition        : width 2s, transform 2s;
                -webkit-transition: width 2s, -webkit-transform 2s;

                .planning-top {
                    &::before {
                        border: 2px solid #E42324;
                    }
                }
            }
        }

        .planning-content {
            display           : -webkit-box;
            -webkit-box-orient: vertical;
            overflow          : hidden;
            text-overflow     : ellipsis;
            -webkit-line-clamp: 10;
            -webkit-box-orient: vertical;
            margin-bottom     : 40px;
            font-size         : 14px;
        }

        .planning-detail {
            position  : absolute;
            bottom    : 20px;
            right     : 20px;
            text-align: right;
            color     : #fff;
            cursor    : pointer;
        }


        .planning-right {
            padding: 0;

            .right-content {
                position          : relative;
                height            : 400px;
                background        : rgba(255, 91, 91, 1);
                color             : #333333;
                padding           : 30px;
                width             : 70%;
                transition        : width 2s, transform 2s;
                -webkit-transition: width 2s, -webkit-transform 2s;

                .planning-top {
                    &::before {
                        border: 2px solid #2C2C2C;
                    }
                }
            }
        }

        .planning-left1 {
            width: 100% !important;
        }

        .planning-top {
            position     : relative;
            margin-bottom: 16px;
            text-indent  : 20px;

            &::before {
                position: absolute;
                top     : 0;
                left    : 0;
                content : "";
                width   : 0;
                height  : 100%;
            }
        }
    }

    // 公共title
    .index-t {
        color        : #0C273C;
        width        : 360px;
        padding-top  : 92px;
        margin-bottom: 36px;

        div:nth-child(1) {
            font-size: 32px;
        }

        div:nth-child(2) {
            font-size : 26px;
            position  : relative;
            display   : inline-block;
            margin-top: 10px;

            &::after {
                position: absolute;
                top     : -5px;
                right   : 0;
                content : "";
                width   : 100%;
                height  : 0;
                border  : 2px solid #0C273C;
            }
        }
    }

    .process {
        .swiper-container {
            .swiper-slide {
                display    : flex;
                align-items: center;
            }

            img {
                width: 100%;
            }

            .swiper-pagination {
                text-align  : center;
                position    : absolute;
                bottom      : 0;
                left        : 35%;
                cursor      : pointer;
                display     : inline-block;
                width       : 150px;
                height      : 50px;
                background  : #fff;
                color       : #373737;
                text-align  : center;
                line-height : 50px;
                font-size   : 20px;
                margin-right: .625rem;
            }

            .process-content {

                .content-top {
                    font-size    : 32px;
                    margin-bottom: 22px;
                    color        : #010101;
                }

                .content-en {
                    color        : #727272;
                    margin-bottom: 35px;
                    font-size    : 33px;
                }

                .content-detail {
                    color    : #333333;
                    font-size: 28px;
                }
            }

            .show-none{
                display: none
            }

            .select-one {
                margin-right: 20px;
                font-size   : 18px;
                cursor      : pointer;
                color    : #333333;
            }
          
            .active1 {
                color: #E42324;
            }
        }
    }

    .service-zx-title {
        color        : #0C273C;
