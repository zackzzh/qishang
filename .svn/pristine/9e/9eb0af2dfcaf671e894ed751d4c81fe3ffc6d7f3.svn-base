@media screen and (min-width: 769px) and (max-width: 1200px) {
    .left-content {
        width: 100% !important;
    }

    .right-content {
        width: 100% !important;
    }
}

@media screen and (min-width: 320px) and (max-width: 768px) {
    .left-content {
        height: auto !important;
        width : 100% !important;

        .planning-content {
            -webkit-line-clamp: 17 !important;
        }
    }

    .right-content {
        height: auto !important;
        width : 100% !important;

        .planning-content {
            -webkit-line-clamp: 17 !important;
        }
    }
}