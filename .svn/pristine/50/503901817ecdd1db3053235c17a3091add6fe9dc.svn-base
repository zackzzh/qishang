.common-footer-div {
    text-align: center;
    background: #0C273C;
    color: #FFFFFF;

    .common-footer-content {
        padding: 0 50px;
        font-size: 14px;
        letter-spacing: 2px;
        line-height: 26px;
    }

    .common-footer-links {
        width: 100%;
        color: #A2ACB6;
        padding: 20px 0 0 0;
        // background: rgba(194, 197, 196, 0.5);

        .common-footer-links-row {
            margin: auto;
            padding: 18px 0;
            font-size: 16px;
            font-weight: bold;

            .common-footer-link-border {
                border-right: 1px solid #A2ACB6;
            }

            div {
                cursor: pointer;
                // color: rgba(12, 39, 60, 1);
            }

            .footer-active-item {
                color: #FF5B5B;
            }
        }

        .active1 {
            color: #FF5B5B !important;
        }
    }

    .footer-info-div {
        padding: 0 0 10px 0;
        position: relative;

        .common-footer-qr {
            width: 180px;
            position: absolute;
            top: 0;
            margin: 0 0 0 200px;
        }

        .footer-logo-div {
            margin-top: 10px;
            display: flex;
            align-items: flex-end;
            justify-content: center;

            img {
                width: auto;
                height: 120px;
                margin: 0 20px;
            }
        }

        .common-footer-phone {
            // width: 330px;
            width: auto;
            height: 30px;
            // margin: auto;
            margin: 22px auto 20px auto;
            display: block;
        }

        .common-footer-address {
            width: auto;
            height: 30px;
            margin: auto;
            margin: 0 auto 30px auto;
            display: block;
        }

        .common-footer-line {
            width: 100%;
            height: 1px;
            background: #FFFFFF;
        }

        .common-footer-copyright {
            padding: 36px 0 10px 0;
            font-size: 14px;
            letter-spacing: 1px;
        }

        .common-footer-licence {
            padding: 0 0 36px 0;
            font-size: 14px;
            letter-spacing: 1px;
        }
    }


}

@media screen and (min-width: 550px) and (max-width: 780px) {
    .common-footer-div {

        .footer-info-div {
            .common-footer-qr {
                width: 180px;
                position: relative;
                top: 0;
                margin: auto;
            }
        }
    }
}

@media screen and (min-width: 420px) and (max-width: 550px) {
    .common-footer-div {

        .footer-info-div {
            .common-footer-qr {
                width: 180px;
                position: relative;
                top: 0;
                margin: auto;
            }

            .common-footer-address {
                width: 100%;
                height: auto;
            }

        }
    }
}

@media screen and (max-width: 420px) {
    .common-footer-div {

        .footer-info-div {
            .common-footer-qr {
                width: 180px;
                position: relative;
                top: 0;
                margin: auto;
            }

            .common-footer-address {
                width: 100%;
                height: auto;
            }

            .common-footer-phone {
                width: 100%;
                height: auto;
            }

        }
    }
}